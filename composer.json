{
    "name": "webignition/basil-parser",
    "description": "Parses raw basil data into basic data structures",
    "keywords": [],
    "homepage": "https://github.com/webignition/basil-parser",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\BasilParser\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\BasilParser\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs": "./vendor/bin/phpcs src tests --colors --standard=PSR12",
        "static-analysis": "./vendor/bin/phpstan analyse src tests --level=7",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ]
    },
    "require": {
        "php": ">=7.4",
        "ext-mbstring": "*",
        "webignition/php-path-resolver": ">=0.1,<1",
        "webignition/basil-models": ">=0.47,<1",
        "webignition/basil-dom-identifier-factory": ">=0.12,<1",
        "webignition/basil-value-extractor": ">=0.3,<1"
    },
    "require-dev": {
        "phpunit/phpunit": "~9.0",
        "squizlabs/php_codesniffer": "3.*",
        "phpstan/phpstan": "^0.12"
    }
}
